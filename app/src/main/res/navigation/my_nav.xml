<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/recipesFragment">

    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.ninjahitech.food_recipe.ui.recipes.RecipesFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_recipes" >
        <action
            android:id="@+id/action_recipesFragment_to_recipesBottomSheet"
            app:destination="@id/recipesBottomSheet" />
        <argument
            android:name="backFromBottomSheet"
            app:argType="boolean"
            android:defaultValue="false" />
<!--        <action-->
<!--            android:id="@+id/action_recipesFragment_to_detailsActivity"-->
<!--            app:destination="@id/detailsActivity" />-->
    </fragment>
    <fragment
        android:id="@+id/favoritesRecipesFragment"
        android:name="com.ninjahitech.food_recipe.ui.FavoritesRecipesFragment"
        android:label="Favorites Recipes"
        tools:layout="@layout/fragment_favorites_recipes" />
    <fragment
        android:id="@+id/foodJokeFragment"
        android:name="com.ninjahitech.food_recipe.ui.FoodJokeFragment"
        android:label="Food Joke"
        tools:layout="@layout/fragment_food_joke" />
    <dialog
        android:id="@+id/recipesBottomSheet"
        android:name="com.ninjahitech.food_recipe.ui.recipes.bottomsheet.RecipesBottomSheet"
        android:label="recipes_bottom_sheet"
        tools:layout="@layout/recipes_bottom_sheet" >
        <action
            android:id="@+id/action_recipesBottomSheet_to_recipesFragment"
            app:destination="@id/recipesFragment"
            app:popUpTo="@id/recipesFragment"
            app:popUpToInclusive="true" />
    </dialog>
</navigation>